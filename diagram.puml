      - respawnTimer: double
      - alive: boolean
      - spawnPosition: Position
      - powerUpTimer: double
      - invulnerableTimer: double
      + isAlive(): boolean
      + setAlive(alive: boolean): void
      + addPoints(points: int): void
      + eatGhost(): void
      + loseLife(): void
      + isDead(): boolean
      + getColor(): Color
  }
    class Position {
      + x: double
      + y: double
      + ToGridPosition(): Pair
      + ToScreenPosition(): Pair
  }
    enum Sound {
      CREDIT
      START_MUSIC
      EAT_DOT
      TURNING_CORNER
      EXTEND
      GHOST_NORMAL
      GHOST_SPURT_1
      GHOST_SPURT_2
      GHOST_SPURT_3
      GHOST_SPURT_4
      EAT_FRUIT
      GHOST_BLUE
      EAT_GHOST
      GHOST_HOME
      FAIL
      COFFEE_BREAK
      - path: String
      + getPath(): String
  }
    enum TileType {
      EMPTY
      WALL
      PAC_DOT
      ENERGIZER
      CHERRY
      STRAWBERRY
      ORANGE
      APPLE
      MELON
      GALAXIAN
      BELL
      KEY
      WALL10
      WALL11
      WALL12
      + points: int
  }
}
package "ServerLogic" {
