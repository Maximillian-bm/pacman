package "model" {
    class Action {
      - playerId: int
      - clock: int
      - move: int
      - index: int
      + getPlayerId(): int
      + getClock(): int
      + getMove(): int
      + getIndex(): int
      + setClock(clock: int): void
  }
    class ActionList {
      - actionsMap: Map
      - actionsList: List
      - nrOfActionsCalled: int
      - missedAction: boolean
      - playerID: int
      + addAction(action: Action): void
      + getActions(clock: int): List
      + missedAction(): boolean
      + fixedMissedAction(): void
  }
    class Constants {
      + LOBBY_TTL: long
      + NR_OF_LOBBYS_CAP: int
      + cleanActions: ActionList
      + REMOTE_PUBLIC_URI: String
      + LOCAL_GATE: String
      + TILE_SIZE: int
      + TILES_WIDE: int
      + TILES_TALL: int
      + INIT_SCREEN_WIDTH: int
      + INIT_SCREEN_HEIGHT: int
      + PLAYER_RESPAWN_DELAY_SEC: double
      + TARGET_FPS: long
