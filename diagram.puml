      - oppositeDir(dir: Direction): Direction
      - countWalkableNeighbors(tiles: TileType, x: int, y: int): int
      - isWalkable(tiles: TileType, x: int, y: int): boolean
      - isWalkableInDir(tiles: TileType, x: int, y: int, d: Direction): boolean
